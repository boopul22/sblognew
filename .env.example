# ========================================
# üóÑÔ∏è DATABASE CONFIGURATION (Supabase)
# ========================================

# Frontend Database Configuration (Next.js App)
# Get these values from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Backend Database Configuration (Migration Scripts & Server-side)
# ‚ö†Ô∏è KEEP PRIVATE - Never expose service key in frontend!
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ========================================
# üìÅ STORAGE CONFIGURATION
# ========================================

# Storage Provider Selection
# Options: 'supabase' or 'cloudflare-r2'
NEXT_PUBLIC_STORAGE_PROVIDER=cloudflare-r2

# Cloudflare R2 Configuration (optional alternative storage provider)
# Only needed if using NEXT_PUBLIC_STORAGE_PROVIDER=cloudflare-r2
NEXT_PUBLIC_CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
NEXT_PUBLIC_CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id_here
NEXT_PUBLIC_CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key_here
NEXT_PUBLIC_CLOUDFLARE_R2_BUCKET_NAME=blog-images
NEXT_PUBLIC_CLOUDFLARE_R2_PUBLIC_URL=https://pub-YOUR_ACCOUNT_ID.r2.dev/blog-images
NEXT_PUBLIC_CLOUDFLARE_R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com

# Backend R2 Configuration (Server-side API Functions)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id_here
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key_here
CLOUDFLARE_R2_BUCKET_NAME=blog-images
CLOUDFLARE_R2_PUBLIC_URL=https://pub-YOUR_ACCOUNT_ID.r2.dev/blog-images
CLOUDFLARE_R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com

# Development Settings
NODE_ENV=development


